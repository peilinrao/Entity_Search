		/**
		 * Object to handle the display of system messages to the user.
		 */
	   var FsFeedback = {
		   feedbackType: {
			   success: "fs_message fs_success",
			   warning: "fs_message fs_warning",
			   error: "fs_message fs_error",
			   information: "fs_message fs_information"
		   },
		   message: null,
		   type: null,
		   
		   // -------------------------------------------------------------------------
		   // Set up the feedback parameters
		   // -------------------------------------------------------------------------
		   init: function(msg, type) {
			   this.message = msg;
			   switch (type) {
				   case 'success':
					   this.type = this.feedbackType.success;
					   break;
				   case 'error':
					   this.type = this.feedbackType.error;
					   break;
				   case 'warning':
					   this.type = this.feedbackType.warning;
					   break;
				   case 'information':
					   this.type = this.feedbackType.information;
					   break;
			   }
		   },
	   
		   // -------------------------------------------------------------------------
		   // Display the feedback mssage in the given area
		   // -------------------------------------------------------------------------
		   display: function(holderElementId, messageElementId, fadeFlag) {
			   if (this.type != null) {
				   document.getElementById(holderElementId).className = this.type;
				   document.getElementById(messageElementId).innerHTML = this.message;
				   Effect.Appear(holderElementId, {duration: 0.2});
				   new Effect.Highlight(holderElementId);
				   if (fadeFlag) {
					   Effect.BlindUp(holderElementId, {delay: 4, duration: 0.2});
				   }
			   }
		   }
	   } // end FsFeedback
	   

			
	</script>
	

